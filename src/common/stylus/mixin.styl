// 1px 上边边框
top-border-1px($color)
  position relative
  &::before
    content ''
    position absolute
    z-index 200
    top 0
    width 100%
    height 1px
    background $color

// 1px 下边边框
bottom-border-1px($color)
  position relative
  &::before
    content ''
    position absolute
    z-index 200
    bottom 0
    width 100%
    height 1px
    background $color

// 根据像素比缩放1px

@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-1px
    &::before
      translate scale(.5)
@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-1px
    &::before
      translate scale(.3333)

// 清除浮动
.clearFix
  *zoom 1
  &::after
    content ''
    display block
    clear both

